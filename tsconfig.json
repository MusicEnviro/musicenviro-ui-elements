{
	"compilerOptions": {
		"types": ["react", "node"],
		"declaration": true,
		"declarationMap": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"outDir": "./lib",
		"rootDir": "./src",
		"jsx": "react",
		"downlevelIteration": true,
		"esModuleInterop": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
